<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basicBackgroundColor"
    android:gravity="center"
    tools:context="android.webcrawler.osori.hungryosori.StartActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/basicBackgroundColor"
        android:layout_above="@+id/main_textview"
        sl:scale_base_width="300"
        sl:scale_base_height="100">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/image_osori"
            sl:scale_left="75"
            sl:scale_top="25"
            sl:scale_width="150"
            sl:scale_height="50"
            />

    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>
